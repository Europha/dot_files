        # Position of the bar
        tray_padding 4
        position top
        # Bar colors  
        colors {
                background #141414
                separator #141414
                #                  border         background          text
                focused_workspace  #141414         #141414          #ffffff
                inactive_workspace #141414         #141414          #7f7f7f
                urgent_workspace   #141414         #141414          #f00000
        }
}

